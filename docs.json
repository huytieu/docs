{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Scout - Your AI Quality Companion",
  "appearance": {
    "default": "dark"
  },
  "colors": {
    "primary": "#17A977",
    "light": "#47E0B2",
    "dark": "#0F8461"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Meet Scout",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Scout in Action",
            "pages": [
              "essentials/settings",
              "essentials/navigation",
              "essentials/markdown",
              "essentials/code"
            ]
          },
          {
            "group": "Quality Roadmap",
            "pages": [
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "Quick Run",
            "pages": [
              "quick-run"
            ]
          },
          {
            "group": "Coming Soon",
            "pages": [
              "tooling/pr-review",
              "tooling/cli",
              "tooling/mcp"
            ]
          },
          {
            "group": "Stories",
            "pages": [
              "stories/why-we-built-scout"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Product",
          "href": "https://scoutqa.ai",
          "icon": "rocket"
        },
        {
          "anchor": "Changelog",
          "href": "https://docs.scoutqa.ai/changelog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "favicon": "/favicon.svg",
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:huy.tieu@scoutqa.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Launch Scout",
      "href": "https://scoutqa.ai"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/katalon",
      "github": "https://github.com/katalon-studio",
      "linkedin": "https://linkedin.com/company/katalon"
    }
  }
}
